<Window x:Class="QuadroTestPlatform.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuadroTestPlatform"
        mc:Ignorable="d"
        Title="QTP 1.0" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Просмотр тестов">
                <Grid Background="#FF585858">
                    <TextBlock Margin="23,0,446,292">Темы тестирования</TextBlock>
                    <TreeView x:Name="TemsTree" Width="200" Margin="10,20,0,0" Background="#FF585858" BorderBrush="#FF585858" HorizontalAlignment="Left">
                    </TreeView>
                    <Button x:Name="b_addtems" Content="Добавить тему" HorizontalAlignment="Left" Margin="677,10,0,0" VerticalAlignment="Top" Click="Button_Click" Width="107"/>
                    <Button x:Name="b_deleteTems" Content="Удалить тему" HorizontalAlignment="Left" Margin="677,35,0,0" VerticalAlignment="Top" Width="107" Click="b_deleteTems_Click"/>
                    <TextBox x:Name="TextBoxNameTems" HorizontalAlignment="Left" Margin="517,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Height="20" Background="#FFA7A7A7" SelectionBrush="#FFF8C226" BorderBrush="#FFF8C226" SelectionTextBrush="#FFF8C226"/>

                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
